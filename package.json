{
  "name": "proving-grounds",
  "private": true,
  "scripts": {
    "build": "turbo build",
    "lint": "turbo lint",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "clean": "rimraf node_modules */**/node_modules apps/*/.next",
    "test": "./scripts/test-simple.sh",
    "test:ci": "CI=true ./scripts/test-simple.sh",
    "test:local-sa": "cd apps/local-sa && pnpm test:e2e",
    "test:all": "turbo run test --filter=./apps/*",
    "audit": "pnpm audit --audit-level moderate",
    "dev:local-sa": "turbo run dev --filter=./apps/local-sa --filter=./packages/*"
  },
  "devDependencies": {
    "@repo/eslint-config": "workspace:*",
    "@repo/typescript-config": "workspace:*",
    "prettier": "^3.2.5",
    "turbo": "^1.13.3"
  },
  "packageManager": "pnpm@9.1.0",
  "engines": {
    "node": ">=18"
  },
  "dependencies": {
    "rimraf": "^5.0.5"
  }
}
